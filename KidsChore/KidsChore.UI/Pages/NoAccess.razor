@page "/no-access"
@inject NavigationManager NavigationManager

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4">Access Denied</h1>
            <p class="lead">You do not have permission to view this page.</p>
            <hr class="my-4">
            <p>If you believe you should have access, please contact the administrator.</p>
            <a href="/" class="btn btn-primary btn-lg">Go to Homepage</a>
            <br />
            <button class="btn btn-success btn-lg mt-3" @onclick="GoToLogin">Sign In</button>
        </div>
    </div>
</div>

@code {
    private void GoToLogin()
    {
        var returnUrl = NavigationManager.Uri;
        NavigationManager.NavigateTo($"/login?returnUrl={Uri.EscapeDataString(returnUrl)}");
    }
} 