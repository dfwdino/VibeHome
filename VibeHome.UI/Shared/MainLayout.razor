@inherits LayoutComponentBase

<PageTitle>VibeHome.UI</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (AuthState.CurrentUser == null)
{
                <a href="login" class="link">Log In</a>
            }
            else
            {
                <span>Signed In</span>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
